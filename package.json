{
  "name": "sr-pro",
  "private": true,
  "version": "1.0.0",
  "main": "electron/main.js",
  "type": "module",
  "author": "SR Platform",
  "description": "Steam Remake Ultimate Edition",
  "scripts": {
    "dev": "vite",
    "electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "build": "vite build && electron-builder"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.13.0",
    "systeminformation": "^5.21.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.sr.ultimate",
    "productName": "Steam Remake",
    "directories": {
      "output": "Setup_Dosyasi"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/steam_icon.png.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "electron/steam_icon.png.png",
      "uninstallerIcon": "electron/steam_icon.png.png"
    }
  }
}